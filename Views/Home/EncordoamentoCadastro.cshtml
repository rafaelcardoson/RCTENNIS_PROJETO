@{
    ViewBag.Title = "Encordoamento";
}

<style>
    #metodo {
        width: 100%;
        height: 30px;
    }

    #principal {
        width: 100%;
    }

    .btn-custom-size {
        width: 100%;
    }
</style>

<form method="post" class="row g-3">

    <h3>Encordoamento</h3>

    <table>
        <div class="col-md-8">
            <label for="lblClienteEncordoamento" style="font:normal">Nome Cliente: </label>
            <select id="opClienteEncordoamento" name="opClienteEncordoamento" class="form-select">
                <option selected>Selecione...</option>
                <option>...</option>
            </select>
        </div>        
        <div class="col-md-1">
            <label></label>
            @Html.Raw("<a href='" + Url.Action("ClienteCadastro", "Home") + "' class='btn btn-danger' target='_blank'>Adicionar</a>")
        </div>        
    </table>

    <table>
        <div class="col-md-2">
            <label for="lblRaqueteEncordoamento" style="font:normal">Raquete </label>
            <br/>
            <label for="lblRaqueteEncordoamento" style="font:normal">Marca: </label>
            <select id="opRaqueteEncordoamento" name="opRaqueteEncordoamento" class="form-select">
                <option selected>Selecione...</option>
                <option>...</option>
            </select>
        </div>


        <div class="col-md-4">
            <br />
            <label for="lblModeloRaqueteEncordoamento" style="font:normal">Modelo: </label>
            <select id="opModeloRaqueteEncordoamento" name="opModeloRaqueteEncordoamento" class="form-select">
                <option selected>Selecione...</option>
                <option>...</option>
            </select>
        </div>

            <div class="col-md-2">
                <br />
                <label for="lblPadraoEncordoamento" style="font:normal">Padrão Corda: </label>
                <select id="opPadraoEncordoamento" name="opPadraoEncordoamento" class="form-select">
                    <option selected>Selecione...</option>
                    <option>...</option>
                </select>            
        </div>
        <div class="col-md-1">
            <br />
            <label></label>
            @Html.Raw("<a href='" + Url.Action("RaqueteCadastro", "Home") + "' class='btn btn-danger' target='_blank'>Adicionar</a>")
        </div>
    </table>
    
     <table>
        <div class="col-md-2">            
            <label for="lblEncordoamento" style="font:normal">Encordoamento </label>
            <br />
            <label for="lblMarcaCordaEncordoamento" style="font:normal">Marca: </label>
            <select id="opMarcaCordaEncordoamento" name="opMarcaCordaEncordoamento" class="form-select">
                <option selected>Selecione...</option>
                <option>...</option>
            </select>
        </div>

        <div class="col-md-4">            
            <br />
            <label for="lblModeloCordaEncordoamento" style="font:normal">Modelo: </label>
            <select id="opModeloCordaEncordoamento" name="opModeloCordaEncordoamento" class="form-select">
                <option selected>Selecione...</option>
                <option>...</option>
            </select>
        </div>

        <div class="col-md-1">
            <br />
            <label for="lblLBSEncordoamento" style="font:normal">LBS: </label>
            <input type="text" id="txtLBSEncordoamento" name="txtLBSEncordoamento" class="form-control" />
        </div>

        <div class="col-md-2">
            <br />
            <label for="lblDataEncordoamento" style="font:normal">Data Encordoamento: </label>
            <input type="date" id="dtDataEncordoamento" name="dtDataEncordoamento" class="form-control" />
        </div>
    </table>

    <table>
        <div class="col-md-9">
            <label for="lblDescricaoEncordoamento" style="font:normal">Descrição: </label>
            <textarea class="form-control" id="txtDescricaoEncordoamento" name="txtDescricaoEncordoamento" rows="5"></textarea>
        </div>
    </table>    

    <div>
        @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-dark" })
        <input type="submit" class="btn btn-secondary" value="Salvar" />

    </div>

</form>





<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        // Obtém a data atual
        const today = new Date();

        // Formata a data para o padrão YYYY-MM-DD
        const formattedDate = today.toISOString().split('T')[0];

        // Define o valor do campo de data
        document.getElementById('dtDataEncordoamento').value = formattedDate;
    });
</script>

