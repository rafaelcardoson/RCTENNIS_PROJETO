@{
    ViewBag.Title = "Raquetes Cadastro";
}


<style>
    #metodo {
        width: 100%;
        height: 30px;
    }

    #principal {
        width: 100%;
    }

    .btn-custom-size {
        width: 100%;
    }
</style>

<body>
    <form method="post" class="row g-3">

        <h3>Raquete</h3>

        <table>
            <div class="form-group col-md-2">
                <label for="lblMarca" style="font:normal">Marca: </label>
                <select id="opMarca" name="opMarca" class="form-select">
                    <option selected>Selecione...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-5">
                <label for="lblModeloRaquete" style="font:normal">Modelo: </label>
                <input type="text" id="txtModeloRaquete" name="txtModeloRaquete" class="form-control" />
            </div>
            <div class="form-group col-md-1">
                <label for="lblPeso" style="font:normal">Peso: </label>
                <input type="text" id="txtPeso" name="txtPeso" class="form-control" placeholder="gr" />
            </div>
            <div class="form-group col-md-1">
                <label for="lblBalanco" style="font:normal">Balanço: </label>
                <input type="text" id="txtBalanco" name="txtBalanco" class="form-control" placeholder="gr" />
            </div>
        </table>

        <table>
            <div class="form-group col-md-2 red-label">
                <label>Padrão de Encordoamento:</label>
            </div>
            <div class="form-group col-md-2 red-label">
                <label>Tensão Recomendada:</label>
            </div>

        </table>   
        

        <table>
            <div class="form-group col-md-1">
                <label for="lblPadraoMain" style="font:normal">Main: </label>
                <input type="text" id="txtMain" name="txtMain" class="form-control" />
            </div>
            <div class="form-group col-md-1">
                <label for="lblPadraoCross" style="font:normal">Cross: </label>
                <input type="text" id="txtCross" name="txtCross" class="form-control" />
            </div>

       
            <div class="form-group col-md-1">
                <label for="lblTensaoMin" style="font:normal">Lbs De: </label>
                <input type="text" id="txtTensaoMin" name="txtTensaoMin" class="form-control" />
            </div>
            <div class="form-group col-md-1">
                <label for="lblTensaoMax" style="font:normal">Lbs Até: </label>
                <input type="text" id="txtTensaoMax" name="txtTensaoMax" class="form-control" />
            </div>
            <div class="form-group col-md-1">             
            </div>

            <div class="form-group col-md-3">
                <label for="lblMaterial" style="font:normal">Material: </label>
                <input type="text" id="txtMaterial" name="txtMaterial" class="form-control" />
            </div>
            <div class="form-group col-md-1">
                <label for="lblCabeca" style="font:normal">Cabeça: </label>
                <input type="text" id="txtCabeca" name="txtCabeca" class="form-control" />
            </div>
        </table>

        <table>
            <div class="col-md-9">
                <label for="lblDescricao" style="font:normal">Descrição: </label>
                <textarea class="form-control" id="txtDescricao" name="txtDescricao" rows="5"></textarea>
            </div>
        </table>

        <div>
            <br />
            @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-dark" })
            <input type="submit" class="btn btn-secondary" value="Salvar" />
        </div>

    </form>
</body>
</html>